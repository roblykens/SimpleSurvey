{
  "exclude": [
    "./node_modules/"
  ],

  "compileOnSave": false,
  "compilerOption":  { 
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata"
    ]},
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015"
  }
}
